4//
let materia = prompt("Ingresa el nombre de la materia:");
let nota1 = Number(prompt("Ingresa la nota del primer trimestre:"));
let nota2 = Number(prompt("Ingresa la nota del segundo trimestre:"));
let nota3 = Number(prompt("Ingresa la nota del tercer trimestre:"));

let promedio = (nota1 + nota2 + nota3) / 3;

console.log(`Usted tiene promedio ${promedio.toFixed(2)} en la materia ${materia}`);
5//
let base = Number(prompt("Ingrese la base del tri치ngulo:"));
let altura = Number(prompt("Ingrese la altura del tri치ngulo:"));

let superficie = (base * altura) / 2;
console.log(`El tri치ngulo tiene una superficie de ${superficie.toFixed(2)}`);
7//
let totalCostos = 0; 

while (true) {
    let distancia = +prompt("Distancia en km (0 para salir):");
    if (distancia === 0) break;

    let costoPorLitro = +prompt("Costo del litro de nafta:");
    totalCostos += (distancia / 10) * costoPorLitro; 
}

console.log(`El costo total de los viajes es: $${totalCostos.toFixed(2)}`);
