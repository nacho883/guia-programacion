import {onEvent, startServer} from "soquetic";

import fs from "fs";

 

function sabores (){

    return JSON.parse (fs.readFileSync ("data/sabores.json", "utf-8"));

 

}

 

onEvent ("sabores", sabores)

 

function productos (){

    return JSON.parse (fs.readFileSync ("data/productos.json", "utf-8"));

 

}

 

onEvent ("productos", productos)

 

function pedidos (pedido) {

let listadepedidos = JSON.parse (fs.readFileSync ("data/pedidos.json", "utf-8"));

listadepedidost.push (pedido);

fs.writeFileSync ("data/pedidos.json", JSON.stringify (listadepedidos));

return {

    "ok":true

};

 

}

 

onEvent ("pedido", pedidos)

 

startServer (3000);