let listaConvocados = [];


const btnAgregar = document.getElementById('agregar');
const btnLimpiar = document.getElementById('limpiar');
const btnFinalizar = document.getElementById('finalizar');
const ulConvocados = document.getElementById('convocados');


btnAgregar.addEventListener('click', function() {


    console.log("entro aca");


    const nombre = document.getElementById('nombre').value;


        listaConvocados.push(nombre);
        const li = document.createElement('li');
        li.textContent = nombre;
        ulConvocados.appendChild(li);
        document.getElementById('nombre').value = '';
   
});


btnLimpiar.addEventListener('click', function() {
    listaConvocados = [];  
    ulConvocados.innerHTML = '';  
});




btnFinalizar.addEventListener('click', function() {
    if (listaConvocados.length > 0) {
        alert("Jugadores convocados:\n" + listaConvocados.join('\n'));
    } else {
        alert("No hay jugadores convocados.");
    }
});
