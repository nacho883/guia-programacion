1//
let numero = parseFloat(prompt("Ingresa un número:"));

if (numero > 0) {
    console.log("El número es positivo.");
} else if (numero < 0) {
    console.log("El número es negativo.");
} else {
    console.log("El número es neutro (cero).");
}
2//
let numero1 = parseFloat(prompt("Ingresa el primer número:"));
let numero2 = parseFloat(prompt("Ingresa el segundo número:"));


if (numero1 > numero2) {
    console.log("El número más grande es: " + numero1);
    console.log("El número más chico es: " + numero2);
} else if (numero1 < numero2) {
    console.log("El número más grande es: " + numero2);
    console.log("El número más chico es: " + numero1);
} else {
    console.log("Ambos números son iguales.");
}
4//
let lado1 = parseFloat(prompt("ingrese el primer lado"));
let lado2 = parseFloat(prompt("ingrese el segundo lado"));
let lado3 = parseFloat(prompt("ingrese el tercer lado"));

if (lado1 === lado2 && lado2 === lado3) {
    console.log("El triángulo es equilátero (todos los lados son iguales).");
} else if (lado1 === lado2 || lado1 === lado3 || lado2 === lado3) {
    console.log("El triángulo es isósceles (dos lados son iguales).");
} else {
    console.log("El triángulo es escaleno (todos los lados son diferentes).");
}
5//

let año = parseInt(prompt("Ingresa un año:"));

if ((año % 4 === 0 && año % 100 !== 0) || año % 400 === 0) {
    console.log("El año " + año + " es bisiesto.");
} else {
    console.log("El año " + año + " no es bisiesto.");
}
